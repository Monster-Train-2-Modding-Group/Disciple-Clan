{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "RightTimingDelta",
      "names": {
        "english": "Right Timing Delta",
        "chinese": "正确时机"
      },
      "descriptions": {
        "english": "Deal [effect0.power] damage to target unit. Scales with Right Timing Delta in deck.",
        "chinese": "你的卡组中每有一张<b>正确时机</b>，造成 [effect0.power] 点伤害。"
      },
      "cost": 2,
      "card_type": "spell",
      "rarity": "rare",
      "class": "@Chrono",
      "card_art": "@RightTimingDeltaCardArt",
      "targets_room": true,
      "targetless": false,
      "pools": [
        "MegaPool"
      ],
      "effects": [
        {
          "id": "@RightTimingDeltaEffect"
        }
      ],
      "traits": [
        "@RightTimingDeltaScaling",
        "@RightTimingDeltaStrongerMagic"
      ],
      "triggers": [
        "@RightTimingDeltaOnKillTrigger"
      ],
      "lore_tooltips": [
        {
          "english": "Damage scales with Right Timing Delta in deck."
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "RightTimingDeltaEffect",
      "name": "CardEffectDamage",
      "target_mode": "drop_target_character",
      "target_team": "both",
      "param_int": 15
    },
    {
      "id": "RightTimingDeltaOnKillEffect",
      "name": "CardEffectAddUpgradedCopy",
      "param_int": 3,
      "copy_modifiers_from_source": true
    }
  ],
  "traits": [
    {
      "id": "RightTimingDeltaScaling",
      "name": "CardTraitScalingAddDamagePerCard",
      "param_tracked_value": "num_specific_cards_in_deck",
      "param_entry_duration": "this_battle",
      "param_card": "@RightTimingDelta",
      "param_use_scaling_params": true,
      "param_int": 15
    },
    {
      "id": "RightTimingDeltaStrongerMagic",
      "name": "CardTraitStrongerMagicPower"
    }
  ],
  "card_triggers": [
    {
      "id": "RightTimingDeltaOnKillTrigger",
      "trigger": "on_kill",
      "descriptions": {
        "english": "Add a copy to hand.",
        "chinese": "将一张复制加入手牌。"
      },
      "effects": [
        "@RightTimingDeltaOnKillEffect"
      ]
    }
  ],
  "sprites": [
    {
      "id": "RightTimingDeltaCardArt",
      "path": "textures/spells/Right-Timing.png"
    }
  ],
  "game_objects": [
    {
      "id": "RightTimingDeltaCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@RightTimingDeltaCardArt"
        }
      }
    }
  ]
}