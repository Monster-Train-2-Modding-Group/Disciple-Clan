{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "relics": [
    {
      "id": "FreeTime",
      "type": "collectable",
      "names": { "english": "Free Time", "chinese": "空闲时间" },
      "descriptions": {
        "english": "Spell cards cost 1 less [ember] and gain [consume].",
        "chinese": "所有法术费用 -1[ember]并获得[consume]。"
      },
      "icon": "@FreeTimeIcon",
      "icon_small": "@FreeTimeIcon",
      "lore_tooltips": [{ "english": "Spell cost -1 and add trait." }],
      "relic_effects": ["@FreeTimeCostEffect", "@FreeTimeTraitEffect"],
      "extensions": [
        {
          "collectable": {
            "class": "@Chrono",
            "rarity": "common",
            "pools": ["MegaRelicPool"]
          }
        }
      ]
    }
  ],
  "relic_effects": [
    {
      "id": "FreeTimeCostEffect",
      "name": "RelicEffectModifyCardTypeCost",
      "param_card_type": "spell",
      "param_int": -1
    },
    {
      "id": "FreeTimeTraitEffect",
      "name": "RelicEffectAddTrait",
      "param_card_type": "spell",
      "target_card_trait": "CardTraitExhaustState"
    }
  ],
  "sprites": [{ "id": "FreeTimeIcon", "path": "textures/relics/FreeTime.png" }]
}
