{
    "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
    "relics": [
        {
            "id": "GravityOnAscend",
            "type": "collectable",
            "names": {
                "english": "Gravity On Ascend",
                "chinese": "错误的风车"
            },
            "descriptions": {
                "english": "When a friendly unit ascends, apply 1 [DiscipleClan.Plugin_gravity] to it.",
                "chinese": "友方单位[ascend]时，获得[DiscipleClan.Plugin_gravity] 1。"
            },
            "icon": "@GravityOnAscendIcon",
            "icon_small": "@GravityOnAscendIcon",
            "lore_tooltips": [
                {
                    "english": "Apply status when unit ascends."
                }
            ],
            "relic_effects": [
                "@GravityOnAscendEffect"
            ],
            "extensions": [
                {
                    "collectable": {
                        "class": "@Chrono",
                        "rarity": "common",
                        "pools": [
                            "MegaRelicPool"
                        ]
                    }
                }
            ]
        }
    ],
    "relic_effects": [
        {
            "id": "GravityOnAscendEffect",
            "name": "@RelicEffectAddStatusOnMonsterAscend",
            "param_status_effects": [
                {
                    "status": "@gravity",
                    "count": 1
                }
            ],
            "source_team": "monsters"
        }
    ],
    "sprites": [
        {
            "id": "GravityOnAscendIcon",
            "path": "textures/relics/ErrantPinwheel.png"
        }
    ]
}