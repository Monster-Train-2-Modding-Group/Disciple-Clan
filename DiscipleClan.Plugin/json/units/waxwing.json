{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnWaxwing",
      "names": {
        "english": "Waxwing",
        "chinese": "蜡翅"
      },
      "card_art": "@WaxwingCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "rare",
      "class": "@Chrono",
      "pools": ["UnitsAllBanner"],
      "targets_room": true,
      "effects": [{ "id": "@SpawnWaxwingEffect" }],
      "lore_tooltips": [{ "english": "Starts with [icarian]. On [relocate]: +5 [attack] to self (temp)." }]
    }
  ],
  "characters": [
    {
      "id": "Waxwing",
      "names": { "english": "Waxwing", "chinese": "蜡翅" },
      "character_art": "@WaxwingCharacterArt",
      "size": 1,
      "health": 3,
      "attack_damage": 20,
      "subtypes": ["@ChronoSubtype_Seer", "SubtypesData_BannerUnit"],
      "starting_status_effects": [{ "status": "@icarian", "count": 1 }],
      "triggers": ["@WaxwingOnRelocateTrigger"]
    }
  ],
  "character_triggers": [
    {
      "id": "WaxwingOnRelocateTrigger",
      "descriptions": {
        "english": "+5 [attack].",
        "chinese": "+5[attack]。"
      },
      "trigger": "@OnRelocate",
      "effects": [{ "id": "@WaxwingOnRelocateEffect" }]
    }
  ],
  "effects": [
    {
      "id": "SpawnWaxwingEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Waxwing"
    },
    {
      "id": "WaxwingOnRelocateEffect",
      "name": "CardEffectAddTempCardUpgradeToUnits",
      "target_mode": "self",
      "param_upgrade": "@WaxwingRelocateUpgrade"
    }
  ],
  "upgrades": [
    {
      "id": "WaxwingRelocateUpgrade",
      "bonus_damage": 5
    }
  ],
  "sprites": [
    { "id": "WaxwingCardArt", "path": "textures/units/WaxwingCharacterArt.png" },
    { "id": "WaxwingCharacterArt", "path": "textures/units/WaxwingCharacterArt.png" }
  ],
  "game_objects": [
    { "id": "WaxwingCardArt", "type": "card_art", "extensions": { "card_art": { "sprite": "@WaxwingCardArt" } } },
    {
      "id": "WaxwingCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@WaxwingCharacterArt",
          "transform": { "position": { "x": 0, "y": 0.2, "z": 0 }, "scale": { "x": 0.33, "y": 0.33, "z": 0.33 } }
        }
      }
    }
  ]
}
