{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnDilation",
      "names": { "english": "Dilation", "chinese": "扩张" },
      "card_art": "@DilationUnitCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Chrono",
      "pools": ["UnitsAllBanner"],
      "targets_room": true,
      "effects": [{ "id": "@SpawnDilationEffect" }],
      "lore_tooltips": [{ "english": "+capacity +health to target." }]
    }
  ],
  "characters": [
    {
      "id": "DilationUnit",
      "names": { "english": "Dilation", "chinese": "扩张" },
      "character_art": "@DilationUnitCharacterArt",
      "size": 1,
      "health": 8,
      "attack_damage": 3,
      "subtypes": ["SubtypesData_BannerUnit"]
    }
  ],
  "effects": [
    {
      "id": "SpawnDilationEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@DilationUnit"
    }
  ],
  "sprites": [
    { "id": "DilationUnitCardArt", "path": "textures/Dilation.png" },
    { "id": "DilationUnitCharacterArt", "path": "textures/Dilation.png" }
  ],
  "game_objects": [
    { "id": "DilationUnitCardArt", "type": "card_art", "extensions": { "card_art": { "sprite": "@DilationUnitCardArt" } } },
    {
      "id": "DilationUnitCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@DilationUnitCharacterArt",
          "transform": { "position": { "x": 0, "y": 0.2, "z": 0 }, "scale": { "x": 1.0, "y": 1.0, "z": 1.0 } }
        }
      }
    }
  ]
}
