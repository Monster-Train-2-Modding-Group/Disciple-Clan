  ],
  "effects": [
    {
      "id": "SpawnPyreSpikeEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@PyreSpike"
    }
  ],
  "sprites": [
    { "id": "PyreSpikeCardArt", "path": "textures/Pyrespike.png" },
    { "id": "PyreSpikeCharacterArt", "path": "textures/Pyrespike.png" }
