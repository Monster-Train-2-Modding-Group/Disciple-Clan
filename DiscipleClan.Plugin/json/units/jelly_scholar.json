{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnJellyScholar",
      "names": {
        "english": "Jelly Scholar",
        "chinese": "果冻学者"
      },
      "card_art": "@JellyScholarCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Chrono",
      "pools": [
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnJellyScholarEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "End of turn: +10 [attack], +12 [health], and +1 capacity to self. Expands the room's capacity by 1."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "JellyScholar",
      "names": {
        "english": "Jelly Scholar",
        "chinese": "果冻学者"
      },
      "character_art": "@JellyScholarCharacterArt",
      "size": 1,
      "health": 2,
      "attack_damage": 20,
      "subtypes": [
        "@ChronoSubtype_Eternal",
        "SubtypesData_BannerUnit"
      ],
      "triggers": [
        "@JellyScholarEndTurnTrigger"
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "JellyScholarEndTurnTrigger",
      "trigger": "end_turn_pre_hand_discard",
      "descriptions": {
        "english": "Gain +[effect0.upgrade0.bonusdamage] [attack], +[effect0.upgrade0.bonushp] [health], and +[effect0.upgrade0.bonussize] [capacity]. Increase room [capacity] by 1."
      },
      "effects": [
        "@JellyScholarGrowEffect",
        "@JellyScholarAttachCapacityEffect"
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnJellyScholarEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@JellyScholar"
    },
    {
      "id": "JellyScholarAttachCapacityEffect",
      "name": "CardEffectAttachTrainRoomAttachment",
      "target_mode": "room",
      "param_upgrade": "@JellyScholarRoomCapacityUpgrade",
      "param_int_2": 1,
      "param_str": "",
      "param_bool": false
    },
    {
      "id": "JellyScholarGrowEffect",
      "name": "CardEffectAddCardUpgradeToUnits",
      "target_mode": "self",
      "param_upgrade": "@JellyScholarGrowUpgrade",
      "param_int_2": 1
    }
  ],
  "upgrades": [
    {
      "id": "JellyScholarGrowUpgrade",
      "bonus_damage": 5,
      "bonus_hp": 12,
      "bonus_size": 1
    },
    {
      "id": "JellyScholarRoomCapacityUpgrade",
      "room_modifier_upgrades": [
        "@JellyScholarCapacityModifier"
      ]
    }
  ],
  "room_modifiers": [
    {
      "id": "JellyScholarCapacityModifier",
      "name": "RoomStateCapacityModifier",
      "descriptions": {
        "english": "This room has +1 capacity."
      },
      "param_int": 1
    }
  ],
  "sprites": [
    {
      "id": "JellyScholarCardArt",
      "path": "textures/units/JellyScholarCharacterArt.png"
    },
    {
      "id": "JellyScholarCharacterArt",
      "path": "textures/units/JellyScholarCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "JellyScholarCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@JellyScholarCardArt"
        }
      }
    },
    {
      "id": "JellyScholarCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@JellyScholarCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0.2,
              "z": 0
            },
            "scale": {
              "x": 0.33,
              "y": 0.33,
              "z": 0.33
            }
          }
        }
      }
    }
  ]
}