{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnEmberMaker",
      "names": {
        "english": "Embermaker",
        "chinese": "余烬螨"
      },
      "card_art": "@EmberMakerCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@Chrono",
      "pools": ["UnitsAllBanner"],
      "targets_room": true,
      "effects": [{ "id": "@SpawnEmberMakerEffect" }],
      "lore_tooltips": [{ "english": "On hit: add [emberboost] to the character you attacked." }]
    }
  ],
  "characters": [
    {
      "id": "EmberMaker",
      "names": { "english": "Embermaker", "chinese": "余烬螨" },
      "character_art": "@EmberMakerCharacterArt",
      "size": 2,
      "health": 20,
      "attack_damage": 2,
      "subtypes": ["@ChronoSubtype_Eternal", "SubtypesData_BannerUnit"],
      "triggers": ["@EmberMakerOnHitTrigger"]
    }
  ],
  "character_triggers": [
    {
      "id": "EmberMakerOnHitTrigger",
      "trigger": "on_hit",
      "descriptions": { "english": "Add [DiscipleClan.Plugin_emberboost].", "chinese": "对被攻击的单位施加[DiscipleClan.Plugin_emberboost] 1。" },
      "effects": [{ "id": "@EmberMakerAddEmberboostEffect" }]
    }
  ],
  "effects": [
    {
      "id": "SpawnEmberMakerEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@EmberMaker"
    },
    {
      "id": "EmberMakerAddEmberboostEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "last_attacked_character",
      "param_status_effect": "@emberboost",
      "param_int": 1
    }
  ],
  "sprites": [
    { "id": "EmberMakerCardArt", "path": "textures/units/EmbermakerCharacterArt.png" },
    { "id": "EmberMakerCharacterArt", "path": "textures/units/EmbermakerCharacterArt.png" }
  ],
  "game_objects": [
    { "id": "EmberMakerCardArt", "type": "card_art", "extensions": { "card_art": { "sprite": "@EmberMakerCardArt" } } },
    {
      "id": "EmberMakerCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@EmberMakerCharacterArt",
          "transform": { "position": { "x": 0, "y": 0.2, "z": 0 }, "scale": { "x": 0.33, "y": 0.33, "z": 0.33 } }
        }
      }
    }
  ]
}
