  "game_objects": [
    { "id": "WaxPinionCardArt", "type": "card_art", "extensions": { "card_art": { "sprite": "@WaxPinionCardArt" } } },
    {
      "id": "WaxPinionCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
