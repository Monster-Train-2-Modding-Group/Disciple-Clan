{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnEpochTome",
      "names": { "english": "Horizon Tome", "chinese": "地平之书" },
      "card_art": "@EpochTomeCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
