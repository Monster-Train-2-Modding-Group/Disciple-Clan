      "effects": [{ "id": "@SpawnEpochTomeEffect" }],
      "lore_tooltips": [{ "english": "Sweep; reduce attack half." }]
    }
  ],
  "characters": [
    {
      "id": "EpochTome",
      "names": { "english": "Horizon Tome", "chinese": "地平之书" },
