  "effects": [
    {
      "id": "SpawnEpochTomeEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@EpochTome"
    }
  ],
  "sprites": [
    { "id": "EpochTomeCardArt", "path": "textures/Epoch-Tome.png" },
    { "id": "EpochTomeCharacterArt", "path": "textures/Epoch-Tome.png" }
  ],
  "game_objects": [
    { "id": "EpochTomeCardArt", "type": "card_art", "extensions": { "card_art": { "sprite": "@EpochTomeCardArt" } } },
    {
      "id": "EpochTomeCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@EpochTomeCharacterArt",
