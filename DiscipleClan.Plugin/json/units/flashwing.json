{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnFlashwing",
      "names": {
        "english": "Flashfeather",
        "chinese": "闪羽"
      },
      "card_art": "@FlashwingCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "common",
      "class": "@Chrono",
      "pools": [
        "UnitsAllBanner"
      ],
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnFlashwingEffect"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Starts with [icarian]. When this unit dies: apply Dazed 2 to the enemy that last attacked it."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Flashwing",
      "names": {
        "english": "Flashfeather",
        "chinese": "闪羽"
      },
      "character_art": "@FlashwingCharacterArt",
      "size": 1,
      "health": 5,
      "attack_damage": 3,
      "subtypes": [
        "@ChronoSubtype_Seer",
        "SubtypesData_BannerUnit"
      ],
      "starting_status_effects": [
        {
          "count": 1,
          "status": "@icarian"
        }
      ],
      "triggers": [
        "@FlashwingOnDeathTrigger"
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "FlashwingOnDeathTrigger",
      "trigger": "on_death",
      "descriptions": {
        "english": "Apply [effect0.status0.power] [dazed] to and Ascend the enemy that last attacked this unit."
      },
      "effects": [
        "@FlashwingDazedLastAttackerEffect"
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnFlashwingEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@Flashwing"
    },
    {
      "id": "FlashwingDazedLastAttackerEffect",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "last_attacker_character",
      "param_status_effects": [
        {
          "count": 2,
          "status": "dazed"
        }
      ]
    },
    {
      "id": "FlashwingRemoveIcarianEffect",
      "name": "CardEffectBump",
      "target_mode": "last_attacker_character",
      "param_int": 4,
      "target_team": "heroes",
      "target_ignore_bosses": true
    }
  ],
  "sprites": [
    {
      "id": "FlashwingCardArt",
      "path": "textures/units/FlashfeatherCharacterArt.png"
    },
    {
      "id": "FlashwingCharacterArt",
      "path": "textures/units/FlashfeatherCharacterArt.png"
    }
  ],
  "game_objects": [
    {
      "id": "FlashwingCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@FlashwingCardArt"
        }
      }
    },
    {
      "id": "FlashwingCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@FlashwingCharacterArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 0.2,
              "z": 0
            },
            "scale": {
              "x": 0.33,
              "y": 0.33,
              "z": 0.33
            }
          }
        }
      }
    }
  ]
}