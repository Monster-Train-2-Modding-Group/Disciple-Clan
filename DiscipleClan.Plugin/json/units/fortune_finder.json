{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "SpawnFortuneFinder",
      "names": {
        "english": "Fortune Teller",
        "chinese": "占卜师"
      },
      "card_art": "@FortuneFinderCardArt",
      "cost": 1,
      "card_type": "monster",
      "rarity": "common",
      "class": "@Chrono",
      "pools": ["UnitsAllBanner"],
      "targets_room": true,
      "effects": [{ "id": "@SpawnFortuneFinderEffect" }],
      "lore_tooltips": [{ "english": "On Relocate: +20 [gold]." }]
    }
  ],
  "characters": [
    {
      "id": "FortuneFinder",
      "names": { "english": "Fortune Teller", "chinese": "占卜师" },
      "character_art": "@FortuneFinderCharacterArt",
      "size": 1,
      "health": 10,
      "attack_damage": 2,
      "subtypes": ["@ChronoSubtype_Pythian", "SubtypesData_BannerUnit"],
      "triggers": ["@FortuneFinderOnRelocateTrigger"]
    }
  ],
  "character_triggers": [
    {
      "id": "FortuneFinderOnRelocateTrigger",
      "descriptions": {
        "english": "+[effect0.power] [gold].",
        "chinese": "+[effect0.power][gold]。"
      },
      "trigger": "@OnRelocate",
      "effects": ["@FortuneFinderOnRelocateEffect" ]
    }
  ],
  "effects": [
    {
      "id": "SpawnFortuneFinderEffect",
      "name": "CardEffectSpawnMonster",
      "target_mode": "drop_target_character",
      "param_character": "@FortuneFinder"
    },
    {
      "id": "FortuneFinderOnRelocateEffect",
      "name": "CardEffectRewardGold",
      "target_mode": "self",
      "param_int": 20
    }
  ],
  "sprites": [
    { "id": "FortuneFinderCardArt", "path": "textures/FortuneTellerCharacterArt.png" },
    { "id": "FortuneFinderCharacterArt", "path": "textures/FortuneTellerCharacterArt.png" }
  ],
  "game_objects": [
    { "id": "FortuneFinderCardArt", "type": "card_art", "extensions": { "card_art": { "sprite": "@FortuneFinderCardArt" } } },
    {
      "id": "FortuneFinderCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@FortuneFinderCharacterArt",
          "transform": { "position": { "x": 0, "y": 0.2, "z": 0 }, "scale": { "x": 1.0, "y": 1.0, "z": 1.0 } }
        }
      }
    }
  ]
}
