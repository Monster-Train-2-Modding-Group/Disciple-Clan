{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "classes": [
    {
      "id": "Chrono",
      "titles": {
        "english": "Arcadian",
        "chinese": "桃源"
      },
      "descriptions": {
        "english": "Dead prophets and oracles who climbed from the abyss and eschewed redemption.",
        "chinese": "死去的预言家们从深渊之中爬了上来，并躲避了救赎。"
      },
      "subclass_descriptions": {
        "english": "Arcadian"
      },
      "card_draft_icon": "@DiscipleCardDraftIcon",
      "icons": {
        "small": "@ClanIconSmall",
        "medium": "@ClanIconMedium",
        "large": "@ClanIconLarge",
        "silhouette": "@ClanIconSilhouette"
      },
      "card_style": "@Chrono",
      "ui_color": {
        "r": 0.964,
        "g": 0.729,
        "b": 0.015,
        "a": 1
      },
      "ui_color_dark": {
        "r": 0.12,
        "g": 0.375,
        "b": 0.5,
        "a": 1
      },
      "ui_gradient": [
        {
          "time": 0,
          "color": {
            "r": 0.964,
            "g": 0.729,
            "b": 0.015,
            "a": 1
          }
        },
        {
          "time": 1,
          "color": {
            "r": 0.12,
            "g": 0.375,
            "b": 0.5,
            "a": 1
          }
        }
      ],
      "class_select_character_displays": [
        "@DiscipleClassDisplay"
      ],
      "champions": [
        {
          "id": "DiscipleChampion",
          "card_data": "@SpawnDisciple",
          "starter_card": "@PatternShift",
          "upgrade_tree": [
            ["@DiscipleWardmasterBasic", "@DiscipleWardmasterPremium", "@DiscipleWardmasterPro"],
            ["@DiscipleSymbioteBasic", "@DiscipleSymbiotePremium", "@DiscipleSymbiotePro"],
            ["@DiscipleShifterBasic", "@DiscipleShifterPremium", "@DiscipleShifterPro"]
          ],
          "icon": "@DiscipleChampionIcon",
          "portrait": "@DiscipleChampionIcon",
          "locked_icon": "@DiscipleChampionIcon"
        },
        {
          "id": "SecondDiscipleChampion",
          "card_data": "@SpawnSecondDisciple",
          "starter_card": "@Analog",
          "upgrade_tree": [
            ["@DiscipleEphemeralBasic", "@DiscipleEphemeralPremium", "@DiscipleEphemeralPro"],
            ["@DiscipleFlamelinkedBasic", "@DiscipleFlamelinkedPremium", "@DiscipleFlamelinkedPro"],
            ["@DiscipleEchoBasic", "@DiscipleEchoPremium", "@DiscipleEchoPro"]
          ],
          "icon": "@SecondDiscipleChampionIcon",
          "portrait": "@SecondDiscipleChampionIcon",
          "locked_icon": "@SecondDiscipleChampionIcon"
        }
      ]
    }
  ],
  "game_objects": [
    {
      "id": "DiscipleClassDisplay",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@DiscipleCharacterArt",
          "transform": {
            "position": { "x": 2, "y": -0.2, "z": 0 },
            "scale": { "x": 1.2, "y": 1.2, "z": 1.2 }
          }
        }
      }
    }
  ],
  "sprites": [
    { "id": "DiscipleCardDraftIcon", "path": "textures/class/DiscipleCardDraftIcon.png" },
    { "id": "ClanIconSmall", "path": "textures/class/ClanIconSmall.png" },
    { "id": "ClanIconMedium", "path": "textures/class/ClanIconMedium.png" },
    { "id": "ClanIconLarge", "path": "textures/class/ClanIconLarge.png" },
    { "id": "ClanIconSilhouette", "path": "textures/class/ClanIconSilhouette.png" },
    { "id": "DiscipleChampionIcon", "path": "textures/class/DiscipleChampionIcon.png" },
    { "id": "SecondDiscipleChampionIcon", "path": "textures/units/Hero2CharacterArt.png" },
    { "id": "ChronoUnitCardFrame", "path": "textures/class/UnitCardFrame.png" },
    { "id": "ChronoSpellCardFrame", "path": "textures/class/SpellCardFrame.png" }
  ],
  "class_card_styles": [
    {
      "id": "Chrono",
      "unit_card_frame_sprite": "@ChronoUnitCardFrame",
      "spell_card_frame_sprite": "@ChronoSpellCardFrame"
    }
  ]
}
